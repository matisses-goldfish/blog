    <div class="card hoverable post bg-light">
        <div class="row">
            <div class="col">
                <h5 id="topic">
                    <a href="/topic/{{topic.id}}"> {{ topic }} </a>
                </h5>
                <h2 id="title">
                    {{ title }}
                </h2>
                <p id="comment">
                    {{ comment }}
                </p>
                <h5 id="userID">
                    <a href="/topic/{{blogPost.id}}"> Posted By: {{user.name}}</a> 
                </h5>
            </div>
        </div>
    </div>