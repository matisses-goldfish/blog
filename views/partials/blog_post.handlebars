    <div class="card hoverable post bg-light">
        <div class="row">
            <div class="col">
                <h5 id="topic">
                    <a> {{ topic }} </a>
                </h5>
                <h2 id="title">
                    {{ title }}
                </h2>
                <p id="description">
                    {{ description }}
                </p>
                <h5 id="userID">
                 <p>Posted By: {{user.name}}</p>
                </h5>

                {{#if logged_in}}
                <a href="/login"><p>add comment</p></a>
                {{else}}
                {{>comment}}
                {{/if}}
            </div>
        </div>
    </div>
    <script src="/js/add-blog-post.js"></script>


